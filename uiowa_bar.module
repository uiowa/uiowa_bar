<?php
/**
 * @file
 * University of Iowa branding.
 *
 * Adds the University of Iowa branding bar and footer to each page and
 * implements the Google Custom Search.
 */

/**
 * Implements hook_preprocess_HOOK().
 */
function uiowa_bar_preprocess_html(&$vars) {
  // Add a body class for the active theme name.
  $vars['classes_array'][] = variable_get('uiowa_bar_color_palette');
  $vars['classes_array'][] = variable_get('uiowa_bar_varient');
}

/**
 * Implements hook_permission().
 */
function uiowa_bar_permission() {
  return array(
    'administer uiowa bar' => array(
      'title' => t('Administer UIowa branding bar'),
      'description' => t('Perform administration tasks for the UIowa branding bar.'),
    ),
    'access uiowa cse results' => array(
      'title' => t('Access Google Custom Search Results'),
      'description' => t('View search results for the Google Custom Search for the University.'),
    ),
  );
}

/**
 * Implements hook_menu().
 */
function uiowa_bar_menu() {
  $items = array();

  $items['google-search'] = array(
    'title' => variable_get('site_name') . ' Search',
    'page callback' => 'uiowa_bar_build_results',
    'file' => 'includes/uiowa_bar_results.build.inc',
    'access arguments' => array('access uiowa cse results'),
    'type' => MENU_NORMAL_ITEM,
  );

  $items['admin/config/user-interface/uiowa-bar'] = array(
    'title' => 'University of Iowa Branding Bar',
    'description' => 'Configuration for the University of Iowa Branding Bar',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('uiowa_bar_config_form'),
    'access arguments' => array('administer uiowa bar'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'includes/uiowa_bar.admin.inc',
  );

  return $items;
}

/**
 * Implements hook_form_system_theme_settings_alter().
 */
function uiowa_bar_form_system_theme_settings_alter(&$form, &$form_state) {
  // Custom University of Iowa branding bar styles.
  $form['at-settings']['ui_branding'] = array(
    '#type' => 'fieldset',
    '#title' => t('University of Iowa branding bar'),
    '#description' => t('<p>University of Iowa branding bar customization.</p>'),
  );

  $form['at-settings']['ui_branding']['content'] = array(
    '#type' => 'markup',
    '#markup' => '<p>Many customization options are available for the University of Iowa branding bar, including color palette and how the bar functions.</p><p><a href="' . $GLOBALS['base_url'] . '/admin/config/user-interface/uiowa-bar">Customize the University of Iowa branding bar</a>.</p>',
  );
}

/**
 * Implements hook_theme().
 */
function uiowa_bar_theme() {
  return array(
    'uiowa_bar_link_list' => array(
      'render element' => 'links',
    ),
  );
}

/**
 * Implements hook_page_build().
 */
function uiowa_bar_page_build(&$page) {
  global $theme_key;

  // Get this module's path.
  $path = drupal_get_path('module', 'uiowa_bar');

  // If the theme being used is the default theme, build the bar.
  // This avoids us building the bar on pages using the admin theme.
  if (variable_get('theme_default', 'none') === $theme_key) {
    $path = drupal_get_path('module', 'uiowa_bar');
    $color = variable_get('uiowa_bar_color_palette');
    $footer_location = variable_get('uiowa_bar_footer_location');

    drupal_add_css($path . '/css/ui-global-bar.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE));
    drupal_add_css($path . '/iconfonts/css/ui-bar-glyphs.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE));
    drupal_add_css($path . '/iconfonts/css/ui-bar-glyphs-ie7.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE, 'browsers' => array('IE' => 'IE 7', '!IE' => FALSE)));
    drupal_add_css($path . '/css/' . $color . '.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE));
    drupal_add_css($path . '/css/lte-ie8.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE, 'browsers' => array('IE' => 'lte IE 8', '!IE' => FALSE)));
    drupal_add_css($path . '/css/ie7.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE, 'browsers' => array('IE' => 'IE 7', '!IE' => FALSE)));
    drupal_add_js($path . '/js/ui-header.js');

    module_load_include('inc', 'uiowa_bar', 'includes/uiowa_bar.build');
    module_load_include('inc', 'uiowa_bar', 'includes/uiowa_bar_footer.build');

    $uiowa_bar_top_render_array = build_uiowa_bar();
    $uiowa_bar_footer_render_array = build_uiowa_bar_footer();

    $page['page_top']['uiowa_bar'] = array(
      '#markup' => render($uiowa_bar_top_render_array),
      '#weight' => 25,
    );

    // Change the form's role to search.
    // Per (www.w3.org/TR/wai-aria-practices-1.1/examples/landmarks/search.html).
    $page['page_top']['uiowa_bar']['#markup']  = str_replace('role="form"', 'role="search"', $page['page_top']['uiowa_bar']['#markup']);

    $page[$footer_location]['uiowa_bar_footer'] = array(
      '#markup' => render($uiowa_bar_footer_render_array),
      '#weight' => 25,
    );
  }
}
